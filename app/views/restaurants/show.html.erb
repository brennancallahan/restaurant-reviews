<h1><%=@restaurant.name%></h1>
<h2><%=@restaurant.address%></h2>
<h2><%=@restaurant.city%>, <%=@restaurant.state%> <%=@restaurant.zip%></h2>
<h4><%=@restaurant.description%></h4><br>

<h1>Reviews</h1>
<% @reviews.each do |review| %>
<p><%= review.created_at.strftime("%B %d %Y") %><br>
<%= "Rating: #{review.rating}"%><br>
<%= "Review: #{review.body}" %></p>
<% end %><br><br>

<p><%= link_to 'Add a Review', new_restaurant_review_path(@restaurant) %></p>
<p><%= link_to 'Back', restaurants_path %></p>
