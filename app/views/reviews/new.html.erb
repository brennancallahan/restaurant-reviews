<h1><%="Review Form for #{@restaurant.name}"%></h1>

<%= form_for [@restaurant, @review] do |f| %>
  <div class="field">
    <%= f.label :rating, 'Rating (0-5):'%>
    <%= f.text_field :rating %>
  </div><br>

  <div class="field">
    <%= f.label :body, 'Review:' %>
    <%= f.text_field :body %>
  </div><br>

  <div class="actions">
    <%= f.submit 'Add Review' %>
  </div>
<% end %>

<p><%= link_to 'Back', restaurant_path(@restaurant) %></p>
